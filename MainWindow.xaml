<Window x:Class="RestoManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RestoManager.ViewModels"
        xmlns:converters="clr-namespace:RestoManager.Converters"
        xmlns:res="clr-namespace:RestoManager.Resources"
        mc:Ignorable="d"
        Title="Restaurant Manager" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Assets/icons/app.ico">
    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:TableIconConverter x:Key="TableIconConverter"/>
        <converters:TableTotalPriceConverter x:Key="TableTotalPriceConverter"/>
        <converters:CheckoutButtonColorConverter x:Key="CheckoutButtonColorConverter"/>
        <converters:LanguageNameConverter x:Key="LanguageNameConverter"/>
        <converters:IsWebOrderConverter x:Key="IsWebOrderConverter"/>
        <converters:TableToOrderItemsConverter x:Key="TableToOrderItemsConverter"/>
        <res:LocalizedStrings x:Key="LocalizedStrings"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{Binding RestaurantManagementSystem, Source={StaticResource LocalizedStrings}}" 
                       Style="{StaticResource HeaderTextStyle}"
                       FontSize="32"
                       HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <TextBlock Text="{Binding Language, Source={StaticResource LocalizedStrings}}" 
                           VerticalAlignment="Center" 
                           Margin="0,0,5,0"/>
                <ComboBox x:Name="LanguageComboBox" 
                          Width="120" 
                          ItemsSource="{Binding AvailableLanguages}"
                          SelectedItem="{Binding SelectedLanguage}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource LanguageNameConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Top Bar with Icon Buttons -->
        <Border Grid.Row="1" 
                BorderBrush="{StaticResource AccentBackgroundBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="10,5" 
                Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- See Orders Button -->
                <Button Command="{Binding ShowAllOrdersCommand}"
                        Margin="15,0"
                        Width="150"
                        Height="150"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="{Binding SeeOrders, Source={StaticResource LocalizedStrings}}">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Assets/icons/orders.ico" Width="96" Height="96"/>
                        <TextBlock Text="{Binding SeeOrders, Source={StaticResource LocalizedStrings}}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                    </StackPanel>
                </Button>

                <!-- Accounts Button -->
                <Button Command="{Binding ShowAccountsCommand}"
                        Margin="15,0"
                        Width="150"
                        Height="150"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="{Binding Accounts, Source={StaticResource LocalizedStrings}}">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Assets/icons/accounts.ico" Width="96" Height="96"/>
                        <TextBlock Text="{Binding Accounts, Source={StaticResource LocalizedStrings}}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <!-- Tables Panel -->
            <GroupBox Header="{Binding Orders, Source={StaticResource LocalizedStrings}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Take Away feature removed -->
                    
                    <!-- Tables Grid View -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Tables}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5" VerticalAlignment="Top">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Width" Value="340"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Name, Converter={StaticResource IsWebOrderConverter}}" Value="True">
                                                        <Setter Property="Width" Value="1350"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <Border BorderBrush="{StaticResource AccentBackgroundBrush}" 
                                                    BorderThickness="1" 
                                                    Width="120"
                                                    Height="120"
                                                    Cursor="Hand">
                                                <Border.Background>
                                                    <MultiBinding Converter="{StaticResource StatusToColorConverter}">
                                                        <Binding Path="Name"/>
                                                        <Binding Path="Status"/>
                                                    </MultiBinding>
                                                </Border.Background>
                                                <StackPanel Margin="10" HorizontalAlignment="Center">
                                                    <Image Width="64" Height="64" Margin="0,0,0,5">
                                                        <Image.Source>
                                                            <Binding Converter="{StaticResource TableIconConverter}"/>
                                                        </Image.Source>
                                                    </Image>
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="Bold" 
                                                               FontSize="18"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Location}" 
                                                               FontSize="16"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Border>
                                            
                                            <Button Content="{Binding Checkout, Source={StaticResource LocalizedStrings}}" 
                                                    Command="{Binding DataContext.ShowCheckoutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource CallToActionButtonStyle}"
                                                    Width="100"
                                                    Height="35"
                                                    FontSize="14"
                                                    Padding="0"
                                                    Margin="0,5,0,0"
                                                    HorizontalAlignment="Center">
                                                <Button.Background>
                                                    <MultiBinding Converter="{StaticResource CheckoutButtonColorConverter}">
                                                        <Binding Path="Name"/>
                                                        <Binding Path="IsBillPrinted"/>
                                                    </MultiBinding>
                                                </Button.Background>
                                            </Button>
                                        </StackPanel>
                                        
                                        <!-- Side window panel showing metadata and dishes -->
                                        <Border Grid.Column="1"
                                                Background="#80FFFFFF"
                                                BorderBrush="LightGray"
                                                BorderThickness="1"
                                                Padding="10,8"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Stretch">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" MinWidth="140"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock FontSize="14" FontWeight="SemiBold" Margin="0,0,0,3">
                                                        <Run Text="{Binding Seats, Source={StaticResource LocalizedStrings}, Mode=OneWay}"/>
                                                        <Run Text=": "/>
                                                        <Run Text="{Binding Capacity}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="14" Margin="0,0,0,3">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ClientName}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ClientName}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                        <Run Text="{Binding Client, Source={StaticResource LocalizedStrings}, Mode=OneWay}" FontWeight="SemiBold"/>
                                                        <Run Text=": "/>
                                                        <Run Text="{Binding ClientName, Mode=OneWay}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="14" Margin="0,0,0,3">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding PhoneNumber}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding PhoneNumber}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                        <Run Text="{Binding Phone, Source={StaticResource LocalizedStrings}, Mode=OneWay}" FontWeight="SemiBold"/>
                                                        <Run Text=": "/>
                                                        <Run Text="{Binding PhoneNumber, Mode=OneWay}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="14" Margin="0,0,0,3">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding PickupTimeDisplay}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding PickupTimeDisplay}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                        <Run Text="{Binding Pickup, Source={StaticResource LocalizedStrings}, Mode=OneWay}" FontWeight="SemiBold"/>
                                                        <Run Text=": "/>
                                                        <Run Text="{Binding PickupTimeDisplay, Mode=OneWay}" FontWeight="Bold"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="16" FontWeight="Bold" Foreground="{StaticResource AttentionBrush}" Margin="0,5,0,0">
                                                        <TextBlock.Text>
                                                            <MultiBinding Converter="{StaticResource TableTotalPriceConverter}">
                                                                <Binding/>
                                                                <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.Orders"/>
                                                                <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.OrdersRefreshTrigger"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </StackPanel>
                                                
                                                <!-- Dishes List -->
                                                <ItemsControl Grid.Column="1" Margin="15,0,0,0">
                                                    <ItemsControl.ItemsSource>
                                                        <MultiBinding Converter="{StaticResource TableToOrderItemsConverter}">
                                                            <Binding/>
                                                            <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.Orders"/>
                                                            <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.OrdersRefreshTrigger"/>
                                                        </MultiBinding>
                                                    </ItemsControl.ItemsSource>
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="#F5F5F5" 
                                                                    BorderBrush="#DDDDDD" 
                                                                    BorderThickness="1" 
                                                                    CornerRadius="4" 
                                                                    Padding="8,4" 
                                                                    Margin="0,0,8,8">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding Quantity}" FontWeight="Bold" FontSize="16" Margin="0,0,4,0"/>
                                                                    <TextBlock Text="x " FontSize="14" VerticalAlignment="Center"/>
                                                                    <TextBlock Text="{Binding DishName}" FontSize="16"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
