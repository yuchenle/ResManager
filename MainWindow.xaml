<Window x:Class="RestoManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RestoManager.ViewModels"
        xmlns:converters="clr-namespace:RestoManager.Converters"
        mc:Ignorable="d"
        Title="Restaurant Manager" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Assets/icons/app.ico">
    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:TableIconConverter x:Key="TableIconConverter"/>
        <converters:TableTotalPriceConverter x:Key="TableTotalPriceConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Restaurant Management System" 
                   Style="{StaticResource HeaderTextStyle}"
                   FontSize="32"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Top Bar with Icon Buttons -->
        <Border Grid.Row="1" 
                BorderBrush="{StaticResource AccentBackgroundBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="10,5" 
                Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- See Orders Button -->
                <Button Command="{Binding ShowAllOrdersCommand}"
                        Margin="15,0"
                        Width="100"
                        Height="100"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="See Orders">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Assets/icons/orders.ico" Width="64" Height="64"/>
                        <TextBlock Text="See Orders" HorizontalAlignment="Center" Margin="0,5,0,0" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- Accounts Button -->
                <Button Command="{Binding ShowAccountsCommand}"
                        Margin="15,0"
                        Width="100"
                        Height="100"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="Accounts">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Assets/icons/accounts.ico" Width="64" Height="64"/>
                        <TextBlock Text="Accounts" HorizontalAlignment="Center" Margin="0,5,0,0" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <!-- Tables Panel -->
            <GroupBox Header="Orders">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Create Take Away Button -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Button Content="+ Create Take Away" 
                                Command="{Binding CreateTakeAwayCommand}"
                                Padding="20,10"
                                FontSize="20"
                                MinWidth="180"
                                HorizontalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Tables Grid View -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Tables}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="3" HorizontalAlignment="Center" VerticalAlignment="Top">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <Border BorderBrush="{StaticResource AccentBackgroundBrush}" 
                                                    BorderThickness="1" 
                                                    Width="120"
                                                    Height="120"
                                                    Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                    Cursor="Hand">
                                                <StackPanel Margin="10" HorizontalAlignment="Center">
                                                    <Image Width="64" Height="64" Margin="0,0,0,5">
                                                        <Image.Source>
                                                            <Binding Converter="{StaticResource TableIconConverter}"/>
                                                        </Image.Source>
                                                    </Image>
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="Bold" 
                                                               FontSize="18"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Location}" 
                                                               FontSize="16"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Border>
                                            
                                            <Button Content="Checkout" 
                                                    Command="{Binding DataContext.ShowCheckoutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource CallToActionButtonStyle}"
                                                    Width="100"
                                                    Height="35"
                                                    FontSize="14"
                                                    Padding="0"
                                                    Margin="0,5,0,0"
                                                    HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <!-- Transparent overlay panel showing seats and total price -->
                                        <Border Grid.Column="1"
                                                Background="#80FFFFFF"
                                                BorderBrush="LightGray"
                                                BorderThickness="1"
                                                Padding="8,5"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Top">
                                            <StackPanel>
                                                <TextBlock FontSize="14" FontWeight="SemiBold" Margin="0,0,0,3">
                                                    <Run Text="Seats: "/>
                                                    <Run Text="{Binding Capacity}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="14" FontWeight="SemiBold">
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{StaticResource TableTotalPriceConverter}">
                                                            <Binding/>
                                                            <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.Orders"/>
                                                            <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.OrdersRefreshTrigger"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
