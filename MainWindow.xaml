<Window x:Class="ResManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ResManager.ViewModels"
        xmlns:converters="clr-namespace:ResManager.Converters"
        mc:Ignorable="d"
        Title="Restaurant Manager" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:TotalConverter x:Key="TotalConverter"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:TableEqualityConverter x:Key="TableEqualityConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Restaurant Management System" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Tables Panel -->
            <GroupBox Grid.Column="0" Header="Tables" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Create Table Button -->
                    <Button Grid.Row="0" 
                            Content="+ Create Table" 
                            Command="{Binding CreateTableCommand}"
                            Margin="0,0,0,10" 
                            Padding="10,5"
                            HorizontalAlignment="Stretch"/>
                    
                    <!-- Tables Grid View -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Tables}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" 
                                            BorderThickness="1" 
                                            Margin="3"
                                            Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="TableBorder_MouseLeftButtonDown">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Value="True">
                                                        <DataTrigger.Binding>
                                                            <MultiBinding Converter="{StaticResource TableEqualityConverter}">
                                                                <Binding/>
                                                                <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.SelectedTable"/>
                                                            </MultiBinding>
                                                        </DataTrigger.Binding>
                                                        <Setter Property="BorderBrush" Value="Blue"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Margin="10">
                                            <TextBlock Text="{Binding Id, StringFormat='Table {0}'}" 
                                                       FontWeight="Bold" 
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Location}" 
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,2,0,0"/>
                                            <TextBlock FontSize="11"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,2,0,0">
                                                <Run Text="{Binding Capacity}"/>
                                                <Run Text=" seats"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Status}" 
                                                       FontSize="10"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,5,0,0"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray"/>

            <!-- Menu and Orders Panel -->
            <Grid Grid.Column="2" Margin="5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Menu -->
                <GroupBox Grid.Row="0" Header="Menu" Margin="0,0,0,5">
                    <DataGrid ItemsSource="{Binding Dishes}" 
                              SelectedItem="{Binding SelectedDish}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="80"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100"/>
                            <DataGridCheckBoxColumn Header="Available" Binding="{Binding IsAvailable}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Background="LightGray"/>

                <!-- Active Orders -->
                <GroupBox Grid.Row="2" Header="Active Orders" Margin="0,5,0,0">
                    <DataGrid ItemsSource="{Binding Orders}" 
                              SelectedItem="{Binding SelectedOrder}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Table" Binding="{Binding TableId}" Width="60"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat=C}" Width="80"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding OrderTime, StringFormat=HH:mm}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>

            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" Background="LightGray"/>

            <!-- Current Order Panel -->
            <GroupBox Grid.Column="4" Header="Current Order" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Selected Table Info -->
                    <TextBlock Grid.Row="0" Text="{Binding SelectedTable, StringFormat='Table: {0}'}" 
                               FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Order Items -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding CurrentOrderItems}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Dish" Binding="{Binding DishName}" Width="*"/>
                            <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="50"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="60"/>
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="70"/>
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Remove" 
                                          Command="{Binding RemoveItemFromOrderCommand}"
                                          CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>

                    <!-- Total -->
                    <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="0,0,0,10">
                        <TextBlock Text="{Binding CurrentOrderItems, Converter={StaticResource TotalConverter}}" 
                                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Right"/>
                    </Border>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Vertical">
                        <Button Content="Add Selected Dish" 
                                Command="{Binding AddDishToOrderCommand}"
                                CommandParameter="{Binding SelectedDish}"
                                Margin="0,0,0,5" Padding="10,5"/>
                        <Button Content="Create Order" 
                                Command="{Binding CreateOrderCommand}"
                                Margin="0,0,0,5" Padding="10,5"/>
                        <Button Content="Clear Order" 
                                Command="{Binding ClearOrderCommand}"
                                Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>

