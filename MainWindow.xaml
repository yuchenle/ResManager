<Window x:Class="RestoManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RestoManager.ViewModels"
        xmlns:converters="clr-namespace:RestoManager.Converters"
        mc:Ignorable="d"
        Title="Restaurant Manager" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:TableEqualityConverter x:Key="TableEqualityConverter"/>
        <converters:TableIconConverter x:Key="TableIconConverter"/>
        <converters:TableTotalPriceConverter x:Key="TableTotalPriceConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Restaurant Management System" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Top Bar with See Menu Button -->
        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="0,0,0,1" 
                Padding="10,5" 
                Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="See Menu" 
                        Command="{Binding ShowMenuCommand}"
                        Padding="15,5" 
                        Margin="5,0"
                        MinWidth="120"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <!-- Tables Panel -->
            <GroupBox Header="Tables">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Create Table and Take Away Buttons -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" 
                                Content="+ Create Table" 
                                Command="{Binding CreateTableCommand}"
                                Padding="10,5"/>
                        <Button Grid.Column="2" 
                                Content="+ Create Take Away" 
                                Command="{Binding CreateTakeAwayCommand}"
                                Padding="10,5"/>
                    </Grid>
                    
                    <!-- Tables Grid View -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Tables}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="3" HorizontalAlignment="Center" VerticalAlignment="Top">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <Border BorderBrush="Gray" 
                                                    BorderThickness="1" 
                                                    Width="96"
                                                    Height="96"
                                                    Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                    Cursor="Hand"
                                                    MouseLeftButtonDown="TableBorder_MouseLeftButtonDown">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Value="True">
                                                                <DataTrigger.Binding>
                                                                    <MultiBinding Converter="{StaticResource TableEqualityConverter}">
                                                                        <Binding/>
                                                                        <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.SelectedTable"/>
                                                                    </MultiBinding>
                                                                </DataTrigger.Binding>
                                                                <Setter Property="BorderBrush" Value="Blue"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <StackPanel Margin="10" HorizontalAlignment="Center">
                                                    <Image Width="48" Height="48" Margin="0,0,0,5">
                                                        <Image.Source>
                                                            <Binding Path="Capacity" Converter="{StaticResource TableIconConverter}"/>
                                                        </Image.Source>
                                                    </Image>
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="Bold" 
                                                               FontSize="14"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Location}" 
                                                               FontSize="12"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Border>
                                            
                                            <Button Content="Checkout" 
                                                    Command="{Binding DataContext.ShowCheckoutCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Width="70"
                                                    Height="22"
                                                    FontSize="10"
                                                    FontWeight="SemiBold"
                                                    Padding="4,2"
                                                    Margin="0,5,0,0"
                                                    HorizontalAlignment="Center"
                                                    Background="LightBlue"
                                                    BorderBrush="DarkBlue"
                                                    BorderThickness="1"/>
                                        </StackPanel>
                                        
                                        <!-- Transparent overlay panel showing seats and total price -->
                                        <Border Grid.Column="1"
                                                Background="#80FFFFFF"
                                                BorderBrush="LightGray"
                                                BorderThickness="1"
                                                Padding="8,5"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Top">
                                            <StackPanel>
                                                <TextBlock FontSize="11" FontWeight="SemiBold" Margin="0,0,0,3">
                                                    <Run Text="Seats: "/>
                                                    <Run Text="{Binding Capacity}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" FontWeight="SemiBold">
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{StaticResource TableTotalPriceConverter}">
                                                            <Binding/>
                                                            <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.Orders"/>
                                                            <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.OrdersRefreshTrigger"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
