<Window x:Class="RestoManager.Views.CreateTakeAwayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Take Away Order" Height="600" Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="New Take Away Order" 
                   Style="{StaticResource HeaderTextStyle}"
                   FontSize="32" 
                   Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Order Items -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Order Items:" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    <Button Grid.Column="1"
                            Content="Remove Selected"
                            Command="{Binding RemoveItemCommand}"
                            CommandParameter="{Binding SelectedOrderItem}"
                            Padding="10,5"
                            MinWidth="120"/>
                </Grid>

                <!-- Order Items List -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding CurrentItems}"
                          SelectedItem="{Binding SelectedOrderItem}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          Margin="0,0,0,15"
                          Focusable="True"
                          PreviewKeyDown="OrderItemsDataGrid_PreviewKeyDown">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Dish Name" Binding="{Binding DishName}" Width="*"/>
                        <DataGridTemplateColumn Header="Quantity" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0"
                                                Content="-"
                                                Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Width="40"
                                                Height="35"
                                                Margin="0,0,5,0"
                                                Padding="0"
                                                FontWeight="Bold"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Quantity}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontWeight="SemiBold"/>
                                        <Button Grid.Column="2"
                                                Content="+"
                                                Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Width="40"
                                                Height="35"
                                                Margin="5,0,0,0"
                                                Padding="0"
                                                FontWeight="Bold"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="100"/>
                        <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Total Price -->
                <Border Grid.Row="2" 
                        BorderBrush="{StaticResource AccentBackgroundBrush}" 
                        BorderThickness="1" 
                        Padding="10" 
                        Background="White">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Total: " 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding TotalPrice, StringFormat=C}" 
                                   FontSize="26" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch" 
                          Background="{StaticResource AccentBackgroundBrush}"/>

            <!-- Right Panel: Menu Items -->
            <GroupBox Grid.Column="2" 
                      Header="Menu Items" 
                      Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Menu Items List -->
                    <DataGrid Grid.Row="0"
                              ItemsSource="{Binding AvailableDishes}"
                              SelectedItem="{Binding SelectedDish}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              HeadersVisibility="Column"
                              Margin="0,0,0,10"
                              MouseDoubleClick="MenuItemsDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="80"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Add Button -->
                    <Button Grid.Row="1"
                            Content="Add to Order"
                            Command="{Binding AddDishCommand}"
                            CommandParameter="{Binding SelectedDish}"
                            Style="{StaticResource CallToActionButtonStyle}"
                            Padding="10,5"
                            HorizontalAlignment="Stretch"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Confirm" 
                    Command="{Binding ConfirmCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource CallToActionButtonStyle}"
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="100" 
                    Height="35"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
