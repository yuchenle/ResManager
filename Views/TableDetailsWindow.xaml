<Window x:Class="ResManager.Views.TableDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Table Details" Height="600" Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Table Details -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Table Info -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding TableName}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Location: " FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Location}"/>
            <TextBlock Text="  |  " Margin="10,0"/>
            <TextBlock Text="Seats: " FontWeight="SemiBold"/>
            <TextBox Text="{Binding Capacity, UpdateSourceTrigger=PropertyChanged}" 
                     Width="50" 
                     Margin="5,0"
                     VerticalAlignment="Center"
                     HorizontalContentAlignment="Center"
                     PreviewTextInput="SeatsTextBox_PreviewTextInput"/>
            <TextBlock Text="  |  " Margin="10,0"/>
            <TextBlock Text="Status: " FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Status}"/>
        </StackPanel>

        <!-- Separator -->
        <Separator Grid.Row="2" Margin="0,0,0,10"/>

        <!-- Ordered Dishes Header with Delete Button -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="Ordered Dishes:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>
            <Button Grid.Column="1"
                    Content="Delete Selected"
                    Command="{Binding DeleteOrderItemCommand}"
                    CommandParameter="{Binding SelectedOrderItem}"
                    Padding="10,5"
                    Margin="10,0,0,0"
                    MinWidth="120"/>
        </Grid>

        <!-- Order Items -->
        <DataGrid Grid.Row="4" 
                  ItemsSource="{Binding AllOrderItems}"
                  SelectedItem="{Binding SelectedOrderItem}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  Margin="0,0,0,15"
                  Focusable="True"
                  PreviewKeyDown="OrderItemsDataGrid_PreviewKeyDown">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Dish Name" Binding="{Binding DishName}" Width="*"/>
                <DataGridTemplateColumn Header="Quantity" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0"
                                        Content="-"
                                        Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Width="30"
                                        Height="25"
                                        Margin="0,0,5,0"
                                        Padding="0"
                                        FontWeight="Bold"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Quantity}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontWeight="SemiBold"/>
                                <Button Grid.Column="2"
                                        Content="+"
                                        Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Width="30"
                                        Height="25"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        FontWeight="Bold"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Total Price -->
        <Border Grid.Row="5" 
                BorderBrush="Gray" 
                BorderThickness="1" 
                Padding="10" 
                Background="LightGray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Total: " 
                           FontSize="18" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Text="{Binding TotalPrice, StringFormat=C}" 
                           FontSize="20" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" 
                      HorizontalAlignment="Stretch" 
                      Background="LightGray"/>

        <!-- Right Panel: Menu Items -->
        <GroupBox Grid.Column="2" 
                  Header="Menu Items" 
                  Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Menu Items List -->
                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding AvailableDishes}"
                          SelectedItem="{Binding SelectedDish}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          Margin="0,0,0,10"
                          MouseDoubleClick="MenuItemsDataGrid_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="80"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Add Button -->
                <Button Grid.Row="1"
                        Content="Add to Table"
                        Command="{Binding AddDishToTableCommand}"
                        CommandParameter="{Binding SelectedDish}"
                        Padding="10,5"
                        HorizontalAlignment="Stretch"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
