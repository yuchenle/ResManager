<Window x:Class="RestoManager.Views.AllOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RestoManager.ViewModels"
        xmlns:res="clr-namespace:RestoManager.Resources"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        mc:Ignorable="d"
        Title="All Web Orders" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <res:LocalizedStrings x:Key="LocalizedStrings"/>
        <CollectionViewSource x:Key="GroupedOrders" Source="{Binding Orders}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="OrderTime.Date"/>
            </CollectionViewSource.GroupDescriptions>
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="OrderTime" Direction="Descending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding WebOrdersHistory, Source={StaticResource LocalizedStrings}}" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="{Binding Delete, Source={StaticResource LocalizedStrings}}" 
                    Command="{Binding DeleteOrdersCommand}"
                    Padding="15,5"
                    FontSize="14"
                    Background="#DC3545"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsEnabled="{Binding HasSelectedOrders}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <ListView Grid.Row="2" 
                  x:Name="OrdersListView"
                  ItemsSource="{Binding Source={StaticResource GroupedOrders}}" 
                  BorderThickness="0"
                  SelectionMode="Extended"
                  SelectionChanged="OrdersListView_SelectionChanged">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <Border Background="#EEE" Padding="5" Margin="0,10,0,5" CornerRadius="3">
                                <TextBlock Text="{Binding Name, StringFormat='{}{0:D}'}" 
                                           FontWeight="Bold" 
                                           FontSize="16" 
                                           Foreground="#333"/>
                            </Border>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Margin="0,2" Padding="10" Background="White" Cursor="Hand">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                          Command="{Binding DataContext.ShowOrderDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
                                          CommandParameter="{Binding}"/>
                        </Border.InputBindings>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Time -->
                            <TextBlock Text="{Binding OrderTime, StringFormat='{}{0:HH:mm}'}" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Center"
                                       Foreground="#555"/>
                            
                            <!-- Details -->
                            <StackPanel Grid.Column="1" Margin="10,0">
                                <TextBlock Text="{Binding Notes}" FontSize="14" Foreground="#777" Margin="0,0,0,5" FontStyle="Italic"/>
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Quantity, StringFormat='{}x{0}'}" FontWeight="Bold"/>
                                                <TextBlock Grid.Column="1" Text="{Binding DishName}" Margin="5,0"/>
                                                <TextBlock Grid.Column="2" Text="{Binding UnitPrice, StringFormat='{}{0:C}'}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            
                            <!-- Total -->
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding TotalAmount, StringFormat='{}{0:C}'}" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Top"
                                       Foreground="#007ACC"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
