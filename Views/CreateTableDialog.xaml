<Window x:Class="ResManager.Views.CreateTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Table" Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Capacity -->
        <TextBlock Grid.Row="0" Text="Capacity:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="CapacityTextBox" 
                 Text="4" 
                 Margin="0,0,0,15"
                 PreviewTextInput="CapacityTextBox_PreviewTextInput"/>

        <!-- Location -->
        <TextBlock Grid.Row="2" Text="Location:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" x:Name="LocationTextBox" 
                 Text="Center" 
                 Margin="0,0,0,15"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Create" 
                    Click="CreateButton_Click" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Click="CancelButton_Click" 
                    Width="80" 
                    Height="30"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

