<Window x:Class="RestoManager.Views.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:RestoManager.Resources"
        mc:Ignorable="d"
        Title="Order Details" Height="640" Width="480"
        FontSize="16"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <res:LocalizedStrings x:Key="LocalizedStrings"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="Auto"/> <!-- Customer Info -->
            <RowDefinition Height="*"/>    <!-- Items -->
            <RowDefinition Height="Auto"/> <!-- Footer / Total -->
            <RowDefinition Height="Auto"/> <!-- Close Button -->
        </Grid.RowDefinitions>

        <TextBlock Text="Order Details" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Client Name:" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" Text="{Binding ClientName}"/>
            </Grid>
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Phone Number:" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" Text="{Binding PhoneNumber}"/>
            </Grid>
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Created At:" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" Text="{Binding OrderTime, StringFormat='{}{0:G}'}"/>
            </Grid>
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Pickup Time:" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" Text="{Binding PickupTime, StringFormat='{}{0:HH:mm}'}" Foreground="#E67E22" FontWeight="Bold"/>
            </Grid>
            <Grid Margin="0,2"> <!-- Notes always visible -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Notes:" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" Text="{Binding Notes}" TextWrapping="Wrap" FontStyle="Italic"/>
            </Grid>
        </StackPanel>

        <GroupBox Grid.Row="2" Header="Items" Margin="0,0,0,10">
            <ListView ItemsSource="{Binding Items}" BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Quantity, StringFormat='{}x{0}'}" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{Binding DishName}" Margin="5,0" TextWrapping="Wrap"/>
                            <TextBlock Grid.Column="2" Text="{Binding Subtotal, StringFormat='{}{0:C}'}" HorizontalAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>

        <Border Grid.Row="3" Background="#F8F9FA" Padding="10" CornerRadius="4" Margin="0,0,0,20">
            <Grid>
                <TextBlock Text="Total Amount" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:C}'}" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#007ACC" 
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <Button Grid.Row="4" Content="Close" 
                Padding="20,8" 
                HorizontalAlignment="Right" 
                Click="CloseButton_Click"
                Background="#6C757D"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"/>
    </Grid>
</Window>
