<Window x:Class="RestoManager.Views.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:RestoManager.Resources"
        Title="Checkout" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <res:LocalizedStrings x:Key="LocalizedStrings"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding TableCheckoutTitle}"
                   Style="{StaticResource HeaderTextStyle}"
                   FontSize="32" 
                   Margin="0,0,0,10"/>

        <!-- Table Info -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock FontWeight="SemiBold">
                <Run Text="{Binding Location, Source={StaticResource LocalizedStrings}, Mode=OneWay}"/>
                <Run Text=": "/>
            </TextBlock>
            <TextBlock Text="{Binding Location}"/>
            <TextBlock Text="  |  " Margin="10,0"/>
            <TextBlock FontWeight="SemiBold">
                <Run Text="{Binding Seats, Source={StaticResource LocalizedStrings}, Mode=OneWay}"/>
                <Run Text=": "/>
            </TextBlock>
            <TextBlock Text="{Binding Capacity}"/>
        </StackPanel>

        <!-- Bill Items -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding BillItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding DishName, Source={StaticResource LocalizedStrings}}" Binding="{Binding DishName}" Width="*"/>
                <DataGridTextColumn Header="{Binding Quantity, Source={StaticResource LocalizedStrings}}" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="{Binding UnitPrice, Source={StaticResource LocalizedStrings}}" Binding="{Binding UnitPrice, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="{Binding Subtotal, Source={StaticResource LocalizedStrings}}" Binding="{Binding Subtotal, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="{Binding Tax10Percent, Source={StaticResource LocalizedStrings}}" Binding="{Binding Tax, StringFormat=C}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Totals -->
        <Border Grid.Row="3" 
                BorderBrush="{StaticResource AccentBackgroundBrush}" 
                BorderThickness="1" 
                Padding="15" 
                Background="White"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" FontSize="18" FontWeight="SemiBold">
                    <Run Text="{Binding Subtotal, Source={StaticResource LocalizedStrings}, Mode=OneWay}"/>
                    <Run Text=":"/>
                </TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="1" 
                           Text="{Binding Subtotal, StringFormat=C}" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Right"/>

                <TextBlock Grid.Row="1" Grid.Column="0" FontSize="18" FontWeight="SemiBold" Margin="0,5,0,0">
                    <Run Text="{Binding Tax, Source={StaticResource LocalizedStrings}, Mode=OneWay}"/>
                    <Run Text=":"/>
                </TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" 
                           Text="{Binding TaxAmount, StringFormat=C}" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Right"
                           Margin="0,5,0,0"/>

                <Separator Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,10"/>

                <TextBlock Grid.Row="3" Grid.Column="0" FontSize="24" FontWeight="Bold">
                    <Run Text="{Binding Total, Source={StaticResource LocalizedStrings}, Mode=OneWay}"/>
                    <Run Text=":"/>
                </TextBlock>
                <TextBlock Grid.Row="3" Grid.Column="1" 
                           Text="{Binding TotalAmount, StringFormat=C}" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{Binding Cancel, Source={StaticResource LocalizedStrings}}" 
                    Command="{Binding CancelCommand}"
                    Padding="20,8"
                    MinWidth="100"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="{Binding PrintBill, Source={StaticResource LocalizedStrings}}" 
                    Command="{Binding PrintBillCommand}"
                    Style="{StaticResource CallToActionButtonStyle}"
                    Padding="20,8"
                    MinWidth="120"
                    IsDefault="True"
                    Click="PrintBillButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
