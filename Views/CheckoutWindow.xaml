<Window x:Class="ResManager.Views.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Checkout" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding TableId, StringFormat='Table {0} - Checkout'}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- Table Info -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Location: " FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Location}"/>
            <TextBlock Text="  |  " Margin="10,0"/>
            <TextBlock Text="Seats: " FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Capacity}"/>
        </StackPanel>

        <!-- Bill Items -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding BillItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Dish Name" Binding="{Binding DishName}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="Tax (10%)" Binding="{Binding Tax, StringFormat=C}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Totals -->
        <Border Grid.Row="3" 
                BorderBrush="Gray" 
                BorderThickness="1" 
                Padding="15" 
                Background="LightGray"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Subtotal:" FontSize="14" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="0" Grid.Column="1" 
                           Text="{Binding Subtotal, StringFormat=C}" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Right"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Tax (10%):" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1" 
                           Text="{Binding TaxAmount, StringFormat=C}" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Right"
                           Margin="0,5,0,0"/>

                <Separator Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,10"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Total:" FontSize="18" FontWeight="Bold"/>
                <TextBlock Grid.Row="3" Grid.Column="1" 
                           Text="{Binding TotalAmount, StringFormat=C}" 
                           FontSize="18" 
                           FontWeight="Bold"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Padding="20,8"
                    MinWidth="100"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Print the bill" 
                    Command="{Binding PrintBillCommand}"
                    Padding="20,8"
                    MinWidth="120"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
